# 测试环境配置
NODE_ENV=test
PORT=3001
APP_NAME=智能音箱意图管理系统-测试
APP_VERSION=2.0.0

# 数据库配置（测试环境使用内存数据库）
DB_TYPE=sqlite
DB_STORAGE=:memory:

# JWT 配置
JWT_SECRET=test-jwt-secret-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# 安全配置
BCRYPT_ROUNDS=4
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# 日志配置
LOG_LEVEL=error
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# AI 服务配置
AI_SERVICE_URL=http://localhost:8080
AI_SERVICE_KEY=test-ai-service-key
AI_SERVICE_TIMEOUT=10000

# 缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# 文件上传配置
UPLOAD_DIR=./test-uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,csv

# 监控配置
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=false
METRICS_PORT=9091

# 开发配置
DEBUG=intent-admin:test
ENABLE_SWAGGER=false
ENABLE_MOCK_DATA=true